{
	"env": 
	{
		 "browser": true,
		 "commonjs": true,
		 "es2021": true
	},
	"extends": 
	[
	"eslint:recommended",
	"plugin:@typescript-eslint/eslint-recommended",
	"plugin:@typescript-eslint/recommended"
	],
	"overrides": [],
	"parserOptions": 
	{
		 "ecmaVersion": "latest"
	},
	"rules": 
	{
	  "semi": ["error", "always"],
	  "quotes": ["error", "double"],
	  "brace-style": ["error", "allman", { "allowSingleLine": true }],
	  "indent": ["error", "tab"],
	  "no-tabs": ["error", { "allowIndentationTabs": true }],
	  "no-constant-condition": 0
 }
}
